#!/usr/bin/env sh

# Source nvm/node if available
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"

# Fallback: add common node paths
export PATH="$PATH:/usr/local/bin:/opt/homebrew/bin:$HOME/.nvm/versions/node/$(cat $HOME/.nvmrc 2>/dev/null || echo 'lts')/bin"

npx lint-staged
npm test
